<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circular_image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/girl" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/circular_image"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp"
        android:background="@drawable/rectangle_edittext">


        <TextView
            android:id="@+id/txtSender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="John"
            android:textSize="16sp"
            android:singleLine="true"
            android:padding="5dp"
            android:textColor="@android:color/black" android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtDate"
            android:layout_alignParentRight="true"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="12sp"
            android:text="5 Min ago"
            android:layout_alignBottom="@+id/txtSender"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtSender"
            android:layout_alignParentLeft="true"
            android:padding="12dp">

            <TextView
                android:id="@+id/txtMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:paddingLeft="12dp"
                android:text="You can find the medicine in oppollo hospital,bannergatta road."
                android:textColor="@android:color/black"
                android:textSize="14sp" />

        </RelativeLayout>
    </RelativeLayout>
    </LinearLayout>

</RelativeLayout>